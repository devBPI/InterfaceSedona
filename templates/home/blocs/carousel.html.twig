<!-- Début - Bloc 1 diaporama nouveautés et/ou articles -->
{% if carousel is defined and carousel.elements|length > 0 %}
<div class="carousel carousel--primary">
	<div class="carousel-wrapper">
		<div class="carousel__control">
			<button class="carousel__button carousel__button--pause" type="button" aria-label="Mettre en pause le carousel">
			</button>
		</div>

		<div class="slick-carousel js-carousel-primary" role="region" aria-roledescription="carrousel">
            {% for item in carousel.elements %}
				<div class="carousel__slide">
					<a href="{{ item.link }}" class="carousel__slide-link">
						<span class="sr-only">{{ 'bloc.carousel.item_desciption'|trans({'%index%': loop.index ,'%nb%' : carousel.elements|length , '%title%' : item.title , '%auteur%' : item.description }) }}</span>
					</a>
					<div class="carousel__slide-image">
						<img src="{{ item.imagePath }}" class="img-fluid" alt="" />
                        {% if item.photoCredit %}<p lang="fr"> &copy; {{ item.photoCredit }}</p>{% endif %}
					</div>
					<p class="n1 carousel__slide-title">{{ item.title }}</p>
					<p class="n2 carousel__slide-subtitle">{{ item.description }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endif %}
<!-- Fin - Bloc 1 diaporama nouveautés et/ou articles -->
