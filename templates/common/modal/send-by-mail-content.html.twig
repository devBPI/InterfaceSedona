
<form class="modal-form att-share-btn" method="post" novalidate="novalidate" action="{{ path('send_by_mail') }}" data-toggle="form-remote">
	{% if form.vars.errors|length > 0 %}
		<div class="modal-body">
			{{ form_errors(form) }}
		</div>
	{% endif %}

	<div class="modal-body">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<p class="modal-form__indication"><span>*</span> {{ 'global.form-mandatory-field'|trans }}</p>
				{{ form_row(form.reciever) }}
				{{ form_row(form.sender) }}
				<div class="form-group row">
					<label class="col-form-label col-12 col-sm-4">{{ 'modal.share.field.title' | trans }}</label>
					<div class="col-12 col-sm-8">{{ 'modal.share.object' | trans }}</div>
				</div>
				{{ form_row(form.message) }}
				{{ form_row(form.shortFormat) }}
				{{ form_row(form.image) }}
			</div>
		</div>

		{{ form_rest(form) }}
	</div>
	<div class="modal-footer">
		<button type="button" data-dismiss="modal" class="btn btn-lg btn-secondary">{{ 'global.modal-cancel'|trans }}</button>
		<button type="submit" class="btn btn-lg btn-primary">{{ 'modal.share.submit'|trans }}</button>
	</div>
</form>
