{% set currentPermalink = current_permalink() %}

<div role="dialog" data-backdrop="static" aria-modal="true" aria-labelledby="modal-share-title" class="modal fade" id="modal-share" tabindex="-1" lang="fr">
	<div class="modal-dialog modal-dialog-centered">

		<div class="modal-content">
			<div class="modal-header">
				<h1 class="n1 modal-header__title" id="modal-share-title">{{ 'modal.share.title'|trans }}</h1>
				<button class="close" type="button" data-dismiss="modal">
					<img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="{{ 'global.modal-close'|trans }}" />
				</button>
			</div>
			
			<div class="modal-body">
				<!-- Go to www.addthis.com/dashboard to customize your tools -->
				<div class="addthis_inline_share_toolbox"></div>
			</div>

            {{ render(controller('App\\Controller\\ReportingController::shareByMailAction', {'link': currentPermalink ?? absolute_url(app.request.uri)})) }}
		</div>
	</div>
</div>
