<!-- Début - Bloc 19 Liste de documents  -->


<div class="col-12">
	<ul class="authority-document__list">
		<li class="authority-document__item"><a href="#carousel-auteur">Auteur</a></li>
		<li class="authority-document__item"><a href="#carousel-sujets">Sujets</a></li>
	</ul>
</div>

<div id="carousel-auteur" class="col-12">
	<div class="authority-document__documents">
		<div class="authority-document__header">
			<h2 class="n1">Auteur</h2>
			<div>
				<a href="#" class="link link--icone-end">Voir tout <span class="sr-only">les résultats </span><span>(*Insert number*)</span> <img src="{{ asset('images/icones/icone-chevron-gauche.svg') }}" alt="" class="icone-chevron-right"/></a>
			</div>
		</div>
		<div class="carousel-secondary">
			<div class="carousel-secondary__body">
				<div class="carousel-wrapper">
					<div class="slick-carousel" role="region" aria-roledescription="carrousel">
						{% for i in 1..4 %}
							<div class="slick-slide-content">
								<a href="#" title="Actualité {{ i }} sur 24, Titre de Auteur">
									<div>
										<img src="{{ asset('images/couvertures-generiques/cg-livre.svg') }}" alt="" class="img-fluid" />
									</div>
									<p>Titre</p>
									<p>Auteur</p>
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="carousel-sujets" class="col-12">
	<div class="authority-document__documents border-bottom-0">
		<div class="authority-document__header">
			<h2 class="n1">Sujets</h2>
			<div>
				<a href="#" class="link  link--icone-end">Voir tout <span class="sr-only">les résultats </span><span>(*Insert number*)</span> <img src="{{ asset('images/icones/icone-chevron-gauche.svg') }}" alt="" class="icone-chevron"/></a>
			</div>
		</div>
		<div class="carousel-secondary">
			<div class="carousel-secondary__body">
				<div class="carousel-wrapper">
					<div class="slick-carousel" role="region" aria-roledescription="carrousel">
						{% for i in 1..4 %}
							<div class="slick-slide-content">
								<a href="#" title="Actualité {{ i }} sur 24, Titre de Auteur">
									<div>
										<img src="{{ asset('images/couvertures-generiques/cg-image.svg') }}" alt="" class="img-fluid" />
									</div>
									<p>Titre</p>
									<p>Auteur</p>
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

