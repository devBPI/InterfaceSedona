<div role="dialog" aria-modal="true" aria-labelledby="modal-export-title" class="modal fade" id="modal-export">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<form class="modal-form">
				<div class="modal-header">
					<h1 class="n1 modal-header__title" id="modal-export-title">Courriel</h1>
					<button class="close" type="button" aria-label="Fermer cette fenêtre" data-dismiss="modal">
						<span aria-hidden="true" class="sr-only">X</span>
						<img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="" />
					</button>
				</div>

				<div class="modal-body">
					<legend class="n2">Paramétrer le PDF</legend>

					<small class="modal-form__indication"><span>*</span> champs obligatoires</small>

					<div class="form-group row">
						<label class="col-12 col-sm-3" for="export-recipient">Destinataire(s) <span>*</span></label>
						<div class="col-12 col-sm-9">
							<input type="text" class="form-control" id="export-recipient">
						</div>
					</div>

					<div class="form-group row">
						<label class="col-12 col-sm-3" for="export-comments">Commentaires</label>
						<div class="col-12 col-sm-9">
							<input type="text" class="form-control" id="export-comments">
						</div>
					</div>
					
					<div class="row justify-content-sm-end">
						<div class="col-12 col-sm-9">
							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" id="export-abstract" value="export-abstract" name="export" checked>
								<label class="form-check-label" for="export-abstract">Notices abrégés</label>
							</div>

							<div class="form-check form-check-inline">
								<input class="form-check-input" type="radio" id="export-long" value="export-long" name="export">
								<label class="form-check-label" for="export-long">Notices longues</label>
							</div>
						</div>

					</div>

					<div class="row justify-content-sm-end">
						<div class="col-12 col-sm-9">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="export-pj" value="export-pj">
								<label class="form-check-label" for="export-pj">Mettre PDF en pièce jointe</label>
							</div>
						</div>

					</div>

					<div>
						<i>*Insert captcha*</i>	
					</div>		
				</div>

				<div class="modal-footer">
					<button type="button" data-dismiss="modal" class="btn btn-lg btn-secondary">Annuler</button>
					<button type="submit" class="btn btn-lg btn-primary">Envoyer</button>
				</div>
			</form>
		</div>
	</div>
</div>
