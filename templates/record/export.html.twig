<div role="dialog" aria-modal="true" aria-labelledby="modal-export">
	<div>

		<div id="modal-export">
			<button type="button" data-toggle="collapse" data-target="#form-pdf" aria-expanded="true" aria-controls="form-pdf">PDF</button>
			<button type="button" data-toggle="collapse" data-target="#form-email" aria-expanded="false" aria-controls="form-email">Courriel</button>
		</div>

		<button type="button" aria-label="Fermer cette fenêtre"><i>*insert icone croix*</i></button>
	</div>

	<div id="form-pdf">
		<form role="form">
			<legend>Paramétrer le PDF</legend>

			<div class="form-group">
				<label for="export-recipient">Destinataire(s) <span>*</span></label>
				<input type="text" class="form-control" id="export-recipient">
			</div>

			<div class="form-group">
				<label for="export-comments">Commentaires</label>
				<input type="text" class="form-control" id="export-comments">
			</div>

			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" id="export-abstract" value="export-abstract">
				<label class="form-check-label" for="export-abstract">Notices abrégés</label>
			</div>

			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" id="export-long" value="export-long">
				<label class="form-check-label" for="export-long">Notices longues</label>
			</div>

			<div class="form-check">
				<input class="form-check-input" type="checkbox" id="export-pj" value="export-pj">
				<label class="form-check-label" for="export-pj">Mettre PDF en pièce jointe</label>
			</div>

			<div>
				<i>*Insert captcha*</i>	
			</div>

			<button type="button" aria-label="Fermer cette fenêtre">Annuler</button>
			<button type="submit">Valider</button>
		</form>
	</div>


	<div id="form-mail">
		<form role="form">
			<legend>Paramétrer le PDF</legend>

			<div class="form-check">
				<input class="form-check-input" type="checkbox" id="export-img" value="export-img">
				<label class="form-check-label" for="export-img">Exporter les images</label>
			</div>

			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" id="export-abstract" value="export-abstract">
				<label class="form-check-label" for="export-abstract">Notices abrégés</label>
			</div>

			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" id="export-long" value="export-long">
				<label class="form-check-label" for="export-long">Notices longues</label>
			</div>

			<div>
				<i>*Insert captcha*</i>	
			</div>

			<button type="button" aria-label="Fermer cette fenêtre">Annuler</button>
			<button type="submit">Valider</button>
		</form>
	</div>

</div>