<div id="carousel-{{ type }}" class="carousel carousel--secondary {{ class|default('') }} col-12">
	<div class="carousel__header">
		<h2 class="n1">{{ ('bloc.list-related-documents.carousel-'~type)|trans }}</h2>
	</div>
	<div class="carousel-wrapper">
		<div class="slick-carousel js-carousel-secondary" role="region" aria-roledescription="carrousel">
			{% for  element in object.mappedNotices %}
				<div class="carousel__slide">


						<a href="{{ path(app.request.attributes.get('_route'), {'permalink': element.permalink}) }}" class="carousel__slide-link">
							<span class="sr-only">
								{{ 'bloc.list-related-documents.link-title'|trans({'%current%': object.pagination.page, '%nb%': object.pagination.rows, '%name%': element.titles[0] }) }}</span>
						</a>

					<div class="carousel__slide-image">
						<img src="{{ path("binary_image", {"content": element.image, 'type': element.type|slugify })}}" class="img-fluid" alt="" />
					</div>
					<p class="n1 carousel__slide-title">{{ element.titles[0] }}</p>
					<p class="n2 carousel__slide-subtitle">
						{% for author in element.authors %}
							{{ author}}
						{% endfor %}
					</p>
				</div>
			{% endfor %}
		</div>
	</div>
