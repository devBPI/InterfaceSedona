<div role="dialog" aria-modal="true" aria-labelledby="modal-share">
	<div>
		<button type="button" aria-label="Fermer cette fenêtre"><i>*insert icone croix*</i></button>
	</div>
	
	<div>
		<div>
			<h3 id="modal-share">Partage</h3>
			{# Boutons RS générer par AddThis, DOM susceptible : #}
			<div>
				<div>
					<div>
						<a role="button" tabindex="1">
							<span class="sr-only">Partager sur Facebook</span>
							<span>*Insert icone Facebook*</span>
							<span>Facebook</span>
						</a>
						<a role="button" tabindex="1">
							<span class="sr-only"></span>
							<span>*Insert icone Twitter*</span>
							<span>Twitter</span>
						</a>
						<a role="button" tabindex="1">
							<span class="sr-only"></span>
							<span>*Insert icone LinkedIn*</span>
							<span>LinkedIn</span>
						</a>
						<a role="button" tabindex="1">
							<span class="sr-only"></span>
							<span>*Insert icone Pinterest*</span>
							<span>Pinterest</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div>
			<h3>Citation</h3>
			<h4>Copier une référence</h4>

			<div id="modal-share-accordion">

				{% for i in 1..3 %}

					<div id="citation-{{ i }}">
						<button data-toggle="collapse" data-target="#citation-content-{{ i }}" aria-expanded="true" aria-controls="citation-content-{{ i }}">
						<i aria-hidden="true">*insert icone caret*</i> XXX (X<sup>e</sup> édition)
						</button>
					</div>

					<div id="citation-content-{{ i }}" class="collapse show" aria-labelledby="citation-{{ i }}" data-parent="#modal-share-accordion">
						<div>
							<p>par *insert name + date + date* - résumé</p>
							<button type="button">Copier<span class="sr-only"> la citation</span></button>
						</div>
					</div>

				{% endfor %}

			</div>

		</div>

		<div>
			<h3>Permalien</h3>
			<div>
				<p>*insert url*</p>
				<button type="button">Copier<span class="sr-only"> l'url</span></button>
			</div>
		</div>

	</div>

</div>