<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8">
		<title>{{ 'global.title-print'|trans }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% if app.environment != 'test' %}<link rel="stylesheet" href="{{ absolute_url(asset('build/print-css.css')) }}">{% endif %}
	</head>
	<body>		
		<header class="print-header header">
			<div class="container">
				<a class="print-header__logo header__logo" href="{{absolute_url(path('home'))  }}" target="_blank">
					{% if app.environment != 'test' %}<img src="{{ absolute_url(asset('images/bpi-logo.png')) }}" alt="{{ 'header.logo_alt'|trans }}" />{% endif %}
				</a>
				<p class="n0 print-header__title">{{ 'bloc.print.subtitles.catalogue' | trans }}</p>
				<p><i>{{ 'bloc.print.subtitles.send-by-robot' | trans }}</i></p>
				<hr/>
			</div>
		</header>
		<main class="print">
			<div class="container">
				{% if attachement.message %}
					<p>{{ attachement.message|nl2br }}</p>
					<hr/>
				{% endif %}
				{% block body %}{% endblock %}
			</div>
		</main>
	</body>
</html>
