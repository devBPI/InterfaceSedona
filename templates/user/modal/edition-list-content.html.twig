<form data-toggle="form-remote" action="{{ path('user_selection_list_edit', {'list': list.id}) }}" method="post" class="modal-form">
	<div class="modal-header">
		<h1 class="n1 modal-header__title" id="modal-list-edit-title">{{ 'modal.list-edit.title'|trans({'%name%': list.title}) }}</h1>
		<button class="close" type="button" data-dismiss="modal">
			<img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="{{ 'global.modal-close'|trans }}" />
		</button>
	</div>

	<div class="modal-body">
		<p class="modal-form__indication"><span>*</span> {{ 'global.form-mandatory-field'|trans }}</p>
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">

				<div class="form-group row">
					<label for="edit-title" class="col-12 col-sm-4">{{ 'modal.list-edit.field-title'|trans }} <span>*</span></label>
					<div class="col-12 col-sm-8">
						<input type="text" class="form-control {% if error is defined %}is-invalid{% endif %}" id="edit-title"
							name="{{ constant('App\\Controller\\UserSelectionController::INPUT_LIST_TITLE') }}"
							value="{{ list.title }}">
						{% if error is defined %}
							<p class="invalid-feedback d-block" role="alert">{{ error|trans }}</p>
						{% endif %}
					</div>
				</div>

			</div>
		</div>
	</div>

	<div class="modal-footer">
		<button type="button" data-dismiss="modal" class="btn btn-lg btn-secondary">{{ 'global.modal-cancel'|trans }}</button>
		<button type="submit" class="btn btn-lg btn-primary">
			{{ 'modal.list-edit.submit'|trans }}
			<span class="sr-only"> {{ 'modal.list-edit.submit-sr-only'|trans({'%name%': list.title}) }}</span>
		</button>
	</div>
</form>
