<div>
    <div class="modal-header">
        <p id="selected-list-container" class="sr-only" role="status" data-text-begin="{{ 'modal.list-add.title-ajouter-before-sr-only'|trans }}" data-text-end="{{ 'modal.list-add.title-ajouter-after-sr-only'|trans }}"></p>
        <h1 class="n1 modal-header__title" id="modal-list-create-title">{{ 'modal.list-add.title'|trans }}</h1>
        <button class="close" type="button" data-dismiss="modal">
            <img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="{{ 'global.modal-close'|trans }}" />
        </button>
    </div>

    <div class="modal-body">
        <div class="list-result border-0 list-result--modal" id="resume-container"></div>

        <p>{{ 'modal.list-add.message-success'|trans }}</p>

        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="row">
                <p>{{ "modal.list-add.text-before-btn" | trans }}</p>
                {# ajouter un margin left #}
                <a href="{{ path('user_selection_index') }}" class="btn btn-primary">
                    {{ 'modal.list-add.btn-selection'|trans }}</a>
            </div>

        {% endif %}
    </div>

    <div class="modal-footer">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>{{ "modal.list-add.text-before-btn" | trans }}</p>
            <a href="{{ path('user_selection_index') }}" class="btn btn-lg btn-primary">
                {{ 'modal.list-add.btn-selection'|trans }}</a>
        {% else %}
            <p class="modal-footer__quote">{{ 'modal.list-add.btn-login'|trans }}</p>

            <a href="{{ path('user_login') }}" class="btn btn-lg btn-primary">
                {{ 'modal.list-add.btn-login2'|trans }}</a>
        {% endif %}

        <button type="button" data-dismiss="modal" class="btn btn-lg btn-secondary">{{ 'global.modal-btn-close'|trans }}</button>
    </div>
</div>
