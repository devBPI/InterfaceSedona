<div>
    <div class="modal-header">
        <h1 class="n1 modal-header__title" id="modal-list-create-title">{{ ('modal.list-'~action~'.title')|trans }}</h1>
        <button class="close" type="button" data-dismiss="modal">
            <img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="{{ 'global.modal-close'|trans }}" />
        </button>
    </div>

    <div class="modal-body">
        {% set attr = {} %}
        {% if title is defined %}
            {% set attr = {'%name%': title} %}
        {% endif %}

        <p>{{ ('modal.list-'~action~'.message-success')|trans(attr) }}</p>
    </div>

    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-lg btn-secondary"
                data-reload="true">{{ 'global.modal-btn-close'|trans }}</button>
    </div>
</div>
