<div role="dialog" aria-modal="true" aria-labelledby="modal-suggest" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">
					<h1 id="modal-suggest">Suggestion</h1>
					<button type="button" aria-label="Fermer cette fenêtre"><span aria-hidden="true">X</span></button>
				</div>

				<div class="modal-body">

					<small>* champs obligatoires</small>
					
					<div class="form-group">
						<label for="suggest-title">Titre <span>*</span></label>
						<input type="text" class="form-control" id="suggest-title" required>
					</div>
					<div class="form-group">
						<label for="suggest-author">Auteur</label>
						<input type="text" class="form-control" id="suggest-author">
					</div>
					<div class="form-group">
						<label for="suggest-type-document">Type de document</label>
						   <select class="form-control" id="suggest-type-document">
								<option>Type de documents 1</option>
								<option>Type de documents 2</option>
								<option>Type de documents 3</option>
							</select>
					</div>
					<div class="form-group">
						<label for="suggest-editor">Editeur</label>
						<input type="text" class="form-control" id="suggest-editor">
					</div>

					<h4>Coordonnées</h4>

					<div class="form-group">
						<label for="suggest-last-name">Nom</label>
						<input type="text" class="form-control" id="suggest-last-name">
					</div>
					<div class="form-group">
						<label for="suggest-first-name">Prénom</label>
						<input type="text" class="form-control" id="suggest-first-name">
					</div>
					<div class="form-group">
						<label for="suggest-email">Courriel</label>
						<input type="text" class="form-control" id="suggest-email">
					</div>

					<div>
						<i>*Insert captcha*</i>	
					</div>
				</div>

				<div class="modal-footer">
					<button type="button" aria-label="Fermer cette fenêtre">Annuler</button>
					<button type="submit">Valider<span class="sr-only"> l'envoi de la suggestion</span></button>
				</div>

			</form>
		</div>
	</div>
</div>
