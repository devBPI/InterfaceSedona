<!-- Début - Bloc 25 Liste des documents présents dans Ma sélection -->

<div class="selection">
    {% for i, list in lists %}
        <div class="table-group">
            <div class="table-group__header">
                <label for="select-liste-{{ i }}"
                       class="sr-only">{{ 'bloc.list-user.list-select'|trans({'%name%': list.title}) }}</label>
                <input type="checkbox" id="select-liste-{{ i }}" class="table-group__input"
                       name="{{ constant('App\\Controller\\UserSelectionController::INPUT_NAME') }}[{{ constant('App\\Controller\\UserSelectionController::INPUT_LIST') }}][]"
                       value="{{ list.id }}">
                <p class="table-group__title">{{ 'bloc.list-user.list-name'|trans({'%name%': list.title}) }}</p>
                <a href="{{ path('user_selection_list_edit', {'list': list.id}) }}" class="table-group__link"
                   data-target="#modal-list-edit" data-toggle="modal" role="button">
                    <span class="sr-only sr-only-focusable">{{ 'bloc.list-user.list-name-change'|trans({'%name%': list.title}) }}</span>
                    <img src="{{ asset('images/icones/icone-crayon-gris.svg') }}" alt="" class="icone-pen"/>
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-group__table">
                    <caption class="sr-only">{{ 'bloc.list-user.list-name'|trans({'%name%': list.title}) }}</caption>
                    <thead class="table__thead">
                    <tr>
                        <th role="presentation"></th>
                        <th scope="col" aria-sort="none" class="table__thead-title">
                            <button class="btn table__button" type="button"
                                    aria-label="{{ 'bloc.list-user.col.title'|trans }} {{ 'global.list-ordering'|trans }}">
                                {{ 'bloc.list-user.col.title'|trans }}
                                <span class="caret"></span></button>
                        </th>
                        <th scope="col" aria-sort="descending" class="table__thead-author">
                            <button class="btn table__button" type="button"
                                    aria-label="{{ 'bloc.list-user.col.autor'|trans }} {{ 'global.list-ordering'|trans }}">
                                {{ 'bloc.list-user.col.autor'|trans }}
                                <span class="caret"></span></button>
                        </th>
                        <th scope="col" aria-sort="ascending" class="table__thead-type">
                            <button class="btn table__button" type="button"
                                    aria-label="{{ 'bloc.list-user.col.type'|trans }} {{ 'global.list-ordering'|trans }}">
                                {{ 'bloc.list-user.col.type'|trans }}
                                <span class="caret"></span></button>
                        </th>
                        <th scope="col" aria-sort="none" class="table__thead-date">
                            <button class="btn table__button" type="button"
                                    aria-label="{{ 'bloc.list-user.col.add-to'|trans }} {{ 'global.list-ordering'|trans }}">
                                {{ 'bloc.list-user.col.add-to'|trans }}
                                <span class="caret"></span></button>
                        </th>
                        <th scope="col" aria-sort="none" class="table__thead-comments">
                            {{ 'bloc.list-user.col.comments'|trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody class="table__body">
                    {% for document in list.documents %}
                        {% include 'user/blocs/list-document-detail.html.twig' %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    {% endfor %}

    <div class="selection__footer">
        <button class="selection__button btn" data-target="#modal-list-create" data-toggle="modal" data-context="selection">
            <img src="{{ asset('images/icones/icone-plus.svg') }}" alt=""
                 class="icone-plus"/> {{ 'bloc.list-user.new-list'|trans }}
        </button>
    </div>
</div>
<!-- Fin - Bloc 25 Liste des documents présents dans Ma sélection -->
