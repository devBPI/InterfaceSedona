<!-- Début - Bloc 25 Liste des documents présents dans Ma sélection -->

<div class="selection">
	
	{% for i in 1..3 %}
		<div class="table-group">
			<div class="table-group__header">
				<label for="select-liste-{{ i }}" class="sr-only">{{ 'bloc.list-user.list-select'|trans({'%name%': '*Insert nom de la liste*'}) }}</label>
				<input type="checkbox" id="select-liste-{{ i }}" class="table-group__input">
				<p class="table-group__title">{{ 'bloc.list-user.list-name'|trans({'%name%': '*Insert nom de la liste*'}) }}</p>
				<button class="table-group__link" data-target="#modal-list-edit" data-toggle="modal">
					<span class="sr-only sr-only-focusable">{{ 'bloc.list-user.list-name-change'|trans({'%name%': '*Insert nom de la liste*'}) }}</span><img src="{{ asset('images/icones/icone-crayon-gris.svg') }}" alt="" class="icone-pen"/>
				</button>
			</div>
				
			<div class="table-responsive">
				<table class="table table-striped table-group__table">
					<caption class="sr-only">{{ 'bloc.list-user.list-name'|trans({'%name%': '*Insert nom de la liste*'}) }}</caption>
					<thead class="table__thead">
						<tr>
							<th></th>
							<th scope="col" aria-sort="none" class="table__thead-title">
								<button class="btn table__button" type="button" aria-label="{{ 'bloc.list-user.col.title'|trans }} {{ 'global.list-ordering'|trans  }}">{{ 'bloc.list-user.col.title'|trans }} <span class="caret"></span></button>
							</th>
							<th scope="col" aria-sort="descending" class="table__thead-author">
								<button class="btn table__button" type="button" aria-label="{{ 'bloc.list-user.col.autor'|trans }} {{ 'global.list-ordering'|trans }}">{{ 'bloc.list-user.col.autor'|trans }} <span class="caret"></span></button>
							</th>
							<th scope="col" aria-sort="ascending" class="table__thead-type">
								<button class="btn table__button" type="button" aria-label="{{ 'bloc.list-user.col.type'|trans }} {{ 'global.list-ordering'|trans }}">{{ 'bloc.list-user.col.type'|trans }} <span class="caret"></span></button>
							</th>
							<th scope="col" aria-sort="none" class="table__thead-date">
								<button class="btn table__button" type="button" aria-label="{{ 'bloc.list-user.col.add-to'|trans }} {{ 'global.list-ordering'|trans }}">{{ 'bloc.list-user.col.add-to'|trans }} <span class="caret"></span></button>
							</th>
							<th scope="col" aria-sort="none" class="table__thead-comments">
								{{ 'bloc.list-user.col.comments'|trans }}
							</th>
						</tr>
					</thead>
					<tbody class="table__body">
						{% for i in 1..3 %}
							<tr>
								<td><input class="table__input" type="checkbox" aria-label="{{ 'bloc.list-user.select-ligne'|trans({'%title%': '*Insert title*', '%auteur%': '*Insert auteur*','%document-type%': '*Insert type de document*' }) }}"></td>
								<td>
									<a href="#" aria-label="{{ 'bloc.list-user.link'|trans({'%title%': '*Insert title*'}) }}">Lorem ipsum dolor sit amet, conseteturas</a>
								</td>
								<td>
									Lorem ipsum dolor sit amet, conseteturas
								</td>
								<td class="table__body-type">
									<img src="{{ asset('images/types/type-musique.svg') }}" alt="" class="icone-type-document table__type"/>
								</td>
								<td>03/07/2019</td>
								<td class="table__body-edit">
									Lorem ipsum dolor sit amet, consetetur sadipscing elitr.
									<button data-target="#modal-comments-view" data-toggle="modal">
										<span class="sr-only">{{ 'bloc.list-user.comments-see'|trans }}</span>
										<img src="{{ asset('images/icones/icone-oeil.svg') }}" alt="" class="icone-oeil"/>
									</button>
									<button data-target="#modal-comments-edit" data-toggle="modal">
										<span class="sr-only">{{ 'bloc.list-user.comments-edit'|trans }}</span>
										<img src="{{ asset('images/icones/icone-crayon-noir.svg') }}" alt="" class="icone-crayon"/>
									</button>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table> 
			</div>

		</div>
	{% endfor %}

	<div class="selection__footer">
		<button class="selection__button btn" data-target="#modal-list-create" data-toggle="modal"><img src="{{ asset('images/icones/icone-plus.svg') }}" alt="" class="icone-plus"/> {{ 'bloc.list-user.new-list'|trans }}</button>
	</div>
</div>
<!-- Fin - Bloc 25 Liste des documents présents dans Ma sélection -->
