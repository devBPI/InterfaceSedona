{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

	<h1 class="n1">Se connecter</h1>

	<div class="row justify-content-center">
		<div class="col-12 col-sm-10 col-md-9 col-lg-7">
			<form class="account-form">
				<div class="form-group row">
					<label for="account-mail" class="col-12 col-md-3">Adresse e-mail</label>
					<div class="col-12 col-md-9">
						<input type="email" class="form-control" id="account-mail">
					</div>
				</div>
				<div class="form-group row">
					<label for="account-password" class="col-12 col-md-3">Mot de passe</label>
					<div class="col-12 col-md-9">
						<input type="password" class="form-control" id="account-password">
					</div>
				</div>
				<div class="row justify-content-end">
					<div class="col-12 col-md-9">
						<div class="form-group form-check">
							<input type="checkbox" class="form-check-input" id="account-keep">
							<label class="form-check-label" for="account-keep">Se souvenir</label>
						</div>
					</div>
				</div>
				<div class="account-form__footer">
					<div class="account-form__footer-content">
						<a href="http://authz.bpi.fr/mail.pl?skin=bootstrap" target="_blank" class="account-form__link">Mot de passe oubli√©</a>
						<button type="submit" class="account-form__button">Connexion</button>
					</div>
					<div class="account-form__footer-content">
						<a href="https://www.bpi.fr/formulaire-inscription-bpi" target="_blank" class="account-form__link">S'inscrire</a>
					</div>
				</div>
			</form>
		</div>
	</div>

{% endblock %}
