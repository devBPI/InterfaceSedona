<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8">
		<title>{{ 'global.title-print'|trans }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="{{ absolute_url(asset('build/print-css.css')) }}">
	</head>
	<body>		
		<header class="print-header header">
			<div class="container">
				<div class="d-flex justify-content-between align-items-center">
					<h1 class="n0 print-header__title">{{ 'global.print-title'|trans }}</h1>
					<div class="print-header__logo header__logo">
						<img src="{{ absolute_url(asset('images/bpi-logo.png')) }}" alt="{{ 'header.logo_alt'|trans }}" />
					</div>
				</div>
			</div>
		</header>
		<main class="print">
			<div class="container">
				{% block body %}{% endblock %}
			</div>
		</main>
	</body>
</html>
