<div class="account">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div class="dropdown account__group" aria-label="{{ 'header.account.aria'|trans }}">
			<span class="sr-only">{{ 'header.account.title_connected'|trans }}</span>
			<button type="button" id="dropdown-compte" data-toggle="dropdown" aria-haspopup="listbox" aria-expanded="false" class="account__button btn">
                {{ 'header.account.welcome'|trans }}, {{ app.user.firstname }}
			</button>
			<ul class="dropdown-menu account__list" aria-labelledby="dropdown-compte" role="listbox" tabindex="-1">
				<li class="dropdown-item account__list-item" role="option"><a href="{{ path('app_logout') }}">{{ 'header.account.logout'|trans }}</a></li>
				<li class="dropdown-item account__list-item" role="option"><a href="{{ path('user_personal_data') }}" title="{{ 'header.account.profile_title'|trans }}">{{ 'header.account.profile'|trans }}</a></li>
			</ul>
		</div>
	{% else %}
		<a href="{{ path('user_login') }}" class="account__link btn">{{ 'header.account.title_unconnect'|trans }}</a>
	{% endif %}
</div>
