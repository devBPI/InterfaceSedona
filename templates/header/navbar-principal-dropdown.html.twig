<div class="dropdown-menu" {% if list.id is defined %}id="{{ list.id }}"{% endif %}>
    <div class="row">
        {% for item in list.items %}
            <div class="col-12 col-md-3">
                <a href="{{ item.link }}" class="dropdown-item dropdown-item__title">{{ item.name }}</a>
                {% if item.children is defined %}
                    {% for subName, subLink in item.children %}
                        <a href="{{ subLink }}" class="dropdown-item dropdown-item__sub">{{ subName }}</a>
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>
