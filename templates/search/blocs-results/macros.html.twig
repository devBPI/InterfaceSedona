{% macro add_to_list_form(id, url, name, author, type, noticeType) %}
    {% set index = '__item__' %}
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][id]" value="{{ id }}">
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][url]" value="{{ url }}">
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][name]" value="{{ name }}">
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][author]" value="{{ author }}">
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][type]" value="{{ type }}">
	<input type="hidden" name="{{ constant('App\\Controller\\UserSelectionController::INPUT_DOCUMENT') }}[{{ index }}][notice_type]" value="{{ noticeType }}">
{% endmacro %}
