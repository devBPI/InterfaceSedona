	<div class="list-result__header-informations">
		<label for="all-document-{{ type }}" class="sr-only">{{ ('bloc.header-docs.'~type~'.title-sr-only')|trans }}</label>
		<input type="checkbox" id="all-document-{{ type }}" class="list-result__header-checkbox" data-toggle="check-all" data-target=".notice_{{ type }}">
		<h3 class="n2 list-result__header-title">{{ ('bloc.header-docs.'~type~'.in-ligne')|trans }} : <span>{{ notices.totalCount }}</span></h3>
		{% if seeAll is defined and (seeAll in ['rayon', 'online']) %}
			<a href="{{ add_see_all_into_uri('all') }}" class="list-result__header-link">{{ ('bloc.header-docs.'~type~'.see-more')|trans }} <span class="sr-only sr-only-focusable">{{ ('bloc.header-docs.'~type~'.see-more-sr-only')|trans }}</span></a>
		{% else %}
			<a href="{{ add_see_all_into_uri(type) }}" class="list-result__header-link">{{ ('bloc.header-docs.'~type~'.see-more')|trans }} <span class="sr-only sr-only-focusable">{{ ('bloc.header-docs.'~type~'.see-more-sr-only')|trans }}</span></a>

		{% endif %}

	</div>

<div class="dropdown">
	<span class="sr-only" aria-label="{{ ('bloc.header-docs.'~type~'.order-aria')|trans }}">{{ ('bloc.header-docs.'~type~'.order')|trans }}</span>
	<button class="dropdown-toggle" type="button" id="dropdown-trie-{{ type }}" data-toggle="dropdown" aria-haspopup="listbox" aria-expanded="false">
        {{ 'bloc.header-docs.order-choice'|trans }}
	</button>
	<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-trie-{{ type }}" role="listbox" tabindex="-1">
	{% for index, value in constant('App\\Model\\Search\\SearchQuery::SORT') %}
		<li class="dropdown-item" role="option">
			<a href="{{ add_sorting_to_uri(value) }}">{{ ('bloc.header-docs.order-'~ index) |trans }}</a>
		</li>
	{% endfor %}
	</ul>
</div>

