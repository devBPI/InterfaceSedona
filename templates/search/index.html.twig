{% extends 'base.html.twig' %}

{% block title %}{{ 'page.search.title'|trans }}{% endblock %}

{% block searchextended %}

	<div class="row justify-content-sm-between">
		<div class="col-12 col-sm-auto">
			{% include "search/blocs/search-corrector.html.twig" %}
		</div>
		
		<div class="col-auto">
			{% include "search/blocs/related-topics.html.twig" %}
		</div>

		<div class="col-auto">
			{% include "search/blocs/relaunch-search.html.twig" %}
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-12 col-sm-10 pr-sm-0">
			{% include "search/blocs/filters-search.html.twig" %}
		</div>

		<div class="col-12 col-sm-2 pl-sm-0">
			<div class="search-refine">
				<button class="search-refine__button" type="button" data-target="#modal-refine-search" data-toggle="modal">Affiner<span class="sr-only"> la recherche</span></button>
				<!-- Include modal des filtres - Affiner -->
				{% include "search/modal/refine-search.html.twig" %}
			</div>
		</div>
	</div>

{% endblock %} 

{% block body %}

	<div class="row search-result">
		{% include "search/blocs/results/preview-authority.html.twig" %}
	</div>

	<div class="row">
		{# Include Nombre item #}
		{% include "search/blocs/header-search.html.twig" %}
	</div>

	<div class="row">
		<div class="col-12 col-md-6 pr-md-0">
			<div class="list-result list-result--rayon">

				<div class="list-result__header">
					{# Include header - Documents en rayon #}
					{% include "search/blocs/results/docs-header.html.twig" with {'type': 'rayon'} %}
				</div>

				<div class="list-result__content">
					{% for i in 1..10 %}
						{# Include résultat - Documents en rayon #}
						{% embed "search/blocs/results/docs.html.twig" with {'type': 'rayon'} %}
							{% block availability %}
								<p lang="fr">Presses universitaires du Mirail</p>
								<p lang="fr">1988 - 2018</p>
								<p lang="fr">{{ 'bloc.notice-simple.result-of-bdd'|trans }} <a href="#" aria-label="{{ 'bloc.notice-simple.access-to-bdd'|trans({'%name%':'*Insert name BDD*'}) }}">*Insert name BDD*</a></p>

								<!-- Document disponible -->
								<div class="list-result__content-state">
									<img src="{{ asset('images/icones/icone-map-vert.svg') }}" alt="" class="icone-map"/>
									<p><span>{{ 'bloc.notice-simple.docuement-available'|trans }}</span> - 868(0) CAR</p>
									<p lang="fr">Niveau 3 - Langues et littératures</p>
								</div>

								<!-- Document indisponible -->
								<div lang="fr" class="list-result__content-state d-flex align-items-center">
									<img src="{{ asset('images/icones/icone-map-rouge.svg') }}" alt="" class="icone-map"/>
									<p>{{ 'bloc.notice-simple.docuement-unavailable'|trans }}</p>
									<button class="btn list-result__content-button" data-toggle="modal" data-target="#modal-notified"><img src="{{ asset('images/icones/icone-enveloppe.svg') }}" alt="" class="icone-enveloppe"/> <span class="sr-only">{{ 'bloc.notice-simple.notification-availablity'|trans }}</span></button>
								</div>

								<p lang="fr">{{ 'bloc.notice-simple.last-publication'|trans({'%number%': 110, '%pulication-date%': 'Janvier 2018'}) }}</p>
							{% endblock %}
						{% endembed %}
					{% endfor %}
				</div>
			</div>
		</div>

		<div class="col-12 col-md-6 pl-md-0">
			<div class="list-result list-result--online">

				<div class="list-result__header">
					{# Include header - Documents en ligne #}
					{% include "search/blocs/results/docs-header.html.twig" with {'type': 'online'} %}
				</div>

				<div class="list-result__content">
					{% for i in 1..10 %}
						{# Include résultat - Documents en ligne #}
						{% embed "search/blocs/results/docs.html.twig" with {'type': 'online'} %}
							{% block availability %}
								<p lang="fr">CNRS</p>
								<p lang="fr">1999 - résumé <button class="list-result__content-resume" type="button" data-toggle="tooltip" title="Effet de serre, réchauffement climatique, paléoclimatologie...exemples de questions traitées dans ce dossier multimédia et auxquelles répondent des chercheurs du CNRS et de l'INSU. Pour tous, du lecteur curieux au public averti."><img src="{{ asset('images/icones/icone-resume.svg') }}" alt="" /><span class="sr-only">Afficher le résumé</span></button></p>
								<p lang="fr">Résultat de <a href="#" aria-label="Acceder à *Insert name BDD*">*Insert name BDD*</a></p>
								<!-- Pour les documents en ligne consultable -->
								<p><a href="#" lang="fr">Accéder à *Insert nom du document*</a></p>
								<!-- Pour les documents en ligne non consultable -->
								<p lang="fr">Consultable à la Bpi</p>
							{% endblock %}
						{% endembed %}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		{# Include Pagination #}
		{% include "search/blocs/footer-search.html.twig" %}
	</div>

	<!-- Include modal formulaire pour être prevenu du retour du document en rayon -->
	{% include "search/modal/notified-form.html.twig" %}
{% endblock %}
