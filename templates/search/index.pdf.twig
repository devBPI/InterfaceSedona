{% extends 'base.pdf.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
	<div class="print__bloc print__bloc--rayon">
		<div class="print__header">
			<h2 class="n1">Notice d'autorité</h2>
		</div>

		{% for element in printNoticeWrapper.noticeAuthority %}
			<div class="print__item">
				<div class="row">
					<div class="col-12">
						<h2 class="n1">{{ loop.index }}) {{ element.title }}</h2>
					</div>
                    {% if  includeImage %}
						<div class="col-3">
							<img src="{{absolute_url( asset('images/types-autorite/autorite-'~ (element.type|slugify) ~'.svg')) }}" alt="" class="img-fluid" />
						</div>
					{% endif %}
					<div class="col">
						<ul class="print__list">
							{% include "authority/print-detail.format.twig" with {'notice': element, 'format':'pdf'} %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}

		{% for element in printNoticeWrapper.noticeIndice %}
			<div class="print__item">
				<div class="row">
					<div class="col-12">
						<h2 class="n1">{{ loop.index }}) {{ element.title }} </h2>
					</div>
					{% if includeImage %}
						<div class="col-3">
							<img src="{{ absolute_url(asset('images/types-autorite/autorite-indice.svg')) }}" alt="" class="img-fluid" />
						</div>
					{% endif %}

					<div class="col">
						<ul class="print__list">
							{% include "indice/print-detail.format.twig" with {'notice': element, 'format': 'pdf'} %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="print__bloc print__bloc--rayon">
		<div class="print__header">
			<h2 class="n1">Documents en rayon</h2>
		</div>
		{% for element in printNoticeWrapper.noticeOnShelves %}
			<div class="print__item">
			<div class="row">
				<div class="col-12">
					<h2 class="n1">{{ loop.index }}) {{ element.title }}</h2>
				</div>
                {% if includeImage %}
					<div class="col-3">
						<img src="{{ absolute_url(path('binary_image', {'content':element.image, 'type': element.type| slugify})) }}" class="img-fluid" alt="" />
					</div>
				{% endif %}
				<div class="col">
					<ul class="print__list">
						{% include "notice/print-detail.format.twig" with {'notice': element, 'format': 'pdf'} %}
					</ul>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	<div class="print__bloc ptrin__bloc--online">
		<div class="print__header">
			<h2 class="n1">Documents en ligne</h2>
		</div>
		{% for element in printNoticeWrapper.noticeOnLine %}
			<div class="print__item">
			<div class="row">
				<div class="col-12">
					<h2 class="n1">{{ loop.index }}) {{ element.title }} </h2>
				</div>
                {% if  includeImage %}
					<div class="col-3">
						<img src="{{ absolute_url(path('binary_image', {"content": element.image, 'type': element.type|slugify}) )}}" class="img-fluid" alt="" />
					</div>
				{% endif %}
				<div class="col">
					<ul class="print__list">
                        {% include "notice/print-detail.format.twig" with {'notice': element, 'format': 'pdf'} %}
					</ul>

				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endblock %}
