{% extends 'base.pdf.twig' %}

{% block title %}Résultats de recherche{% endblock %}
{% block body %}
	<div class="print__bloc print__bloc--rayon">
		<div class="print__header">
			<h2 class="n1">Notice d'autorité</h2>
		</div>

		{% for element in printNoticeWrapper.noticeAuthority %}
			<div class="print__item">
				<div class="row">
					<div class="col-12">
						<h2 class="n1">{{ loop.index }}) {{ element.title }}</h2>
					</div>
					<div class="col-3">
						<img src="{{ absolute_url(asset('images/types-autorite/autorite-personne.svg')) }}" alt="" class="print__image" />
					</div>
					<div class="col">
						<ul class="print__list">
							{% include "common/authority.format.twig" with {'notice': element, 'format':'pdf'} %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="print__bloc ptrin__bloc--online">
		<div class="print__header">
			<h2 class="n1">Indice CDU</h2>
		</div>
		{% for element in printNoticeWrapper.noticeIndice %}
			<div class="print__item">
				<div class="row">
					<div class="col-12">
						<h2 class="n1">{{ loop.index }}) {{ element.title }} </h2>
					</div>
					{% if includeImage %}
						<div class="col-3">
							<img src="{{path('binary_image', {"content": element.image}) }}" class="img-fluid" alt="" />
						</div>
					{% endif %}

					<div class="col">
						<ul class="print__list">
							{% include "common/authority.format.twig" with {'notice': element, 'format': 'pdf'} %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="print__bloc print__bloc--rayon">
		<div class="print__header">
			<h2 class="n1">Documents en rayon</h2>
		</div>
		{% for element in printNoticeWrapper.noticeOnShelves %}
			<div class="print__item">
			<div class="row">
				<div class="col-12">
					<h2 class="n1">{{ loop.index }}) {{ element.title }}</h2>
				</div>
                {% if includeImage %}
					<div class="col-3">
						<img src="{{ path('binary_image', {'content':element.image}) }}" class="img-fluid" alt="" />
					</div>
				{% endif %}
				<div class="col">
					<ul class="print__list">
						{% include "common/notice.format.twig" with {'notice': element, 'format': 'pdf'} %}
					</ul>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	<div class="print__bloc ptrin__bloc--online">
		<div class="print__header">
			<h2 class="n1">Documents en ligne</h2>
		</div>
		{% for element in printNoticeWrapper.noticeOnLine %}
			<div class="print__item">
			<div class="row">
				<div class="col-12">
					<h2 class="n1">{{ loop.index }}) {{ element.title }} </h2>
				</div>
				<div class="col-3">
						<img src="{{ path('binary_image', {"content": element.image}) }}" class="img-fluid" alt="" />
					</div>
				<div class="col">
					<ul class="print__list">
                        {% include "common/notice.format.twig" with {'notice': element, 'format': 'pdf'} %}
					</ul>

				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endblock %}
