<div role="dialog" aria-modal="true" aria-labelledby="modal-refine-search-title" class="modal fade modal--filter" id="modal-refine-search">
	<div class="modal-dialog modal-dialog-centered modal-xl">
		<div class="modal-content">
			<form>
				<div class="modal-header">
					<h1 class="n1 modal-header__title" id="modal-refine-search-title">Affiner ma recherche</h1>
					<button class="close" type="button" aria-label="Fermer cette fenêtre" data-dismiss="modal">
						<span aria-hidden="true" class="sr-only">X</span>
						<img src="{{ asset('images/icones/icone-croix-blanc.svg') }}" alt="" />
					</button>
				</div>

				<div class="modal-body">
					<div class="search-facette">
						<button type="button" class="search-facette__button btn" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="rfn-search-available" data-target="#rfn-search-available">Disponibilité</button>
						<div class="collapse search-facette__body" id="rfn-search-available" role="group" aria-label="disponibilité">
							<div class="search-facette__content">
								<div class="search-facette__item search-facette__item--button">
									<button class="btn">Supprimer le filtre<span class="sr-only"> : Disponibilité</span></button>
								</div>
								{% for i in 1..6 %}
									<div class="form-check search-facette__item">
										<input type="checkbox" class="form-check-input" id="rfn-type-avalaible-{{ i }}">
										<label class="form-check-label" for="rfn-type-avalaible-{{ i }}">*Insert Label {{ i }}*</label>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>

				<div class="modal-body">
					<div class="search-facette">
						<button type="button" class="search-facette__button btn" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="rfn-search-theme" data-target="#rfn-search-theme">Thèmes</button>
