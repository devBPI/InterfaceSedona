<div class="dropdown mb-3" aria-label="{{ 'bloc.related-topics.title-aria'|trans }}" lang="fr">
	<span class="sr-only">{{ 'bloc.related-topics.title-sr-only'|trans }}</span>
	{% if linkedSubjects|length > 0 %}
		<button type="button" id="dropdown-sujets" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="listbox" aria-expanded="false">{{ 'bloc.related-topics.text'|trans }}</button>

		<div class="dropdown-menu" aria-labelledby="dropdown-sujets" role="listbox" tabindex="-1">
			{% for subject in linkedSubjects %}
				<a href="{{
					path('search', {
						(constant('App\\Model\\Search\\Criteria::SIMPLE_SEARCH_KEYWORD')): subject,
						(constant('App\\Model\\Search\\Criteria::SIMPLE_SEARCH_TYPE')): constant('App\\WordsList::SUBJECT_WORD')
						}
					)
				}}"
					lang="fr" class="dropdown-item" role="option">{{ subject }}</a>
			{% endfor %}
		</div>
    {% endif %}

</div>
