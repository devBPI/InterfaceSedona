{% spaceless %}
    <?xml version="1.0" encoding="UTF-8"?>
    <facets-wrap>
        <facets>
            {% for name, values in attributes %}
                <facet>
                    <name>
                        {% if translateNames is defined and translateNames == false %}
                            {{ name }}
                        {% else %}
                            {{  ('filters.mapping.'~name)|trans({}, 'facets') }}
                        {% endif %}
                    </name>

                    <values>
                        {% for value in values %}
                            <value>{{ value }}</value>
                        {% endfor %}
                    </values>
                </facet>
            {% endfor %}
        </facets>
    </facets-wrap>
{% endspaceless %}
